    <div class="row">
        <!-- //registration form -->
        <div class="container">
            <div class="d-flex justify-content-center ">
                <div class="card ">
                    <div class="text-center head-text">
                        <h5>Parking Management System</h5>
                    </div>
                    <div class="card-header text-center">
                        <!-- <article class="card-body mx-auto" style="max-width: 400px;"> -->
                        <h4>Create Account</h4>
                    </div>
                    <p class="msg-p text-center">
                        <%=(typeof alertMsg!='undefined' )? alertMsg:''%>
                    </p>
                    <div class="card-body">
                        <form method="post" action="/register">
                            <div class="form-group input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                                </div>
                                <input name="name" class="form-control" placeholder="Full name" type="text" pattern="[A-Za-z0-9]{3,20}">
                            </div> <!-- form-group// -->
                            <div class="form-group input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                                </div>
                                <input name="email" class="form-control" placeholder="Email address" type="email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2, 4}$"
                                    required>
                            </div> <!-- form-group// -->
                            <div class="form-group input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"> <i class="fa fa-phone"></i> </span>
                                </div>
                                <select class="custom-select" style="max-inline-size: 70px;">
                                    <option selected="" value="91">+91</option>
                                    <option value="92">+92</option>
                                    <option value="93">+93</option>
                                    <option value="94">+94</option>
                                </select>
                                <input name="phone" class="form-control" placeholder="Phone number" type="text"
                                    pattern="[6789][0-9]{9}">
                            </div> <!-- form-group// -->
                            <div class="form-group input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"> <i class="fa fa-car"></i> </span>
                                </div>
                                <select class="form-control" name="vehicleType">
                                    <option selected value="0" disabled> Select Vehicle Type</option>
                                    <option value="Two Whelear">Two Wheeler</option>
                                    <option value="Three Whelear">Three Wheeler</option>
                                    <option value="Four Whelear">Four Wheeler</option>
                                    <option value="More than 4 Whelear">More than 4 Wheeler</option>

                                </select>
                            </div> <!-- form-group end.// -->
                            <div class="form-group input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                                </div>
                                <input id="password-field" class=" form-control" style="width: 250px;" placeholder="Create password"
                                    type="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" name="password" title="Password should contain atleast one lowercase, 
                                    one uppercase and one special character, length should be atleast 8"
                                    required>
                                <span toggle="#password-field"
                                    class="form-control py-2  fa fa-fw fa-eye toggle-password" ></span>
                            </div> <!-- form-group// -->
                            <div class="form-group input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                                </div>
                                <input id="password-field2" class="form-control" style="width: 250px;" placeholder="Repeat password" type="password"
                                    name="confirm_password" required>
                                    <span toggle="#password-field2"
                                    class="form-control py-2  fa fa-fw fa-eye toggle-password" ></span>
                            </div> <!-- form-group// -->
                            <div class="form-group">
                                <button type="submit" value="register" class="btn w-100 signup_btn"> Create Account
                                </button>

                            </div> <!-- form-group// -->

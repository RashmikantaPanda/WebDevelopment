<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css"
        integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

    <title>SampleData</title>
    <style>
        @import url(https://fonts.googleapis.com/css?family=Raleway:300,400,600);

        body {
            /* font-family:Georgia, 'Times New Roman', Times, serif; */

            margin: 0;
            /* font-size: .9rem; */
            font-size: 18px;

            font-weight: 400;
            line-height: 1.6;
            color: #212529;
            text-align: left;
            background-color: #e2e5ed;
        }

        .navbar-laravel {
            box-shadow: 0 2px 4px rgba(0, 0, 0, .04);
            /* background-color: rgba(11, 83, 199, 0.952); */
            background: linear-gradient(0deg, #707d9a, 30%, #1176ac 70%);

        }

        .navbar-brand {
            font-size: 20px;
            margin-left: 0;

        }

        .navbar-collapse {
            font-size: large;
        }

        .nav-link {
            color: #ffffff;
            font-size: 22px;
        }

        .my-form,
        .login-form {
            /* font-family: Raleway, sans-serif; */
            font-family: Arial, Helvetica, sans-serif;
        }

        .my-form {
            padding-top: 1.5rem;
            padding-bottom: 1.5rem;
        }

        .my-form .row {
            margin-left: 0;
            margin-right: 0;
        }

        .login-form {
            padding-top: 1.5rem;
            padding-bottom: 1.5rem;

        }

        .login-form .row {
            margin-left: 0;
            margin-right: 0;
        }

        .card-header {
            font-size: 25px;
        }

        .card-body {
            font-size: 16px;

        }
    </style>
</head>

<body>

    <nav class="navbar navbar-expand-lg  navbar-laravel">
        <div class="container">
            <a class="navbar-brand" href="/dashboard">
                <h4 style="color: #f1de07;">Parking Management System </h4>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link my-2" style="font-size: smaller;" href="/logout"><button
                                class="btn-danger"><b>Logout</b></button></a>
                    </li>

                </ul>

            </div>
        </div>
    </nav>



    <div class="container">
        <h1 class="text-center mt-3 mb-3 fs-4  ">
            <%= title %>
        </h1>

        <% if(action=='add' ) { %>

            <div class="card col-6 mx-auto">
                <div class="card-header">Sample Form</div>
                <div class="card-body " style="background-color:darkgrey">
                    <form method="POST" action="/sample-data/add">
                        <div class="row justify-content-center">
                            <div class="col-md-6">

                                <div class="mb-3">
                                    <label>Location</label>
                                    <input type="text" name="location" id="location" class="form-control" />
                                </div>
                            </div>
                            <!-- <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Last Name</label>
                                    <input type="text" name="last_name" id="last_name" class="form-control" />
                                </div>
                            </div> -->
                        </div>
                        <div class="row justify-content-center">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Capacity</label>
                                    <input type="number" name="capacity" id="capacity" class="form-control" />
                                </div>
                            </div>
                            <!-- <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Gender</label>
                                    <select name="gender" class="form-control">
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                    </select>
                                </div>
                            </div> -->
                        </div>
                        <div class="my-3 ms-5 row-cols-5 text-start ">
                            <input type="submit" name="submit_button" class="btn btn-primary" value="Add" />
                        </div>
                    </form>
                </div>
            </div>

            <% } else if(action=='edit' ) { %>
                <div class="card col-6 mx-auto">
                    <div class="card-header">Sample Form</div>
                    <div class="card-body" style="background-color:darkgrey;">
                        <form method="POST" action="/sample-data/edit/<%= sampleData.id %>">
                            <div class="row justify-content-center">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Location</label>
                                        <input type="text" name="location" id="location" class="form-control"
                                            value="<%= sampleData.location %>" />
                                    </div>
                                </div>
                                <!-- <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Last Name</label>
                                        <input type="text" name="last_name" id="last_name" class="form-control" value="<%= sampleData.last_name %>" />
                                    </div>
                                </div> -->
                            </div>
                            <div class="row justify-content-center">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Capacity</label>
                                        <input type="number" name="capacity" id="capacity" class="form-control"
                                            value="<%= sampleData.capacity %>" />
                                    </div>
                                </div>
                                <!-- <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Gender</label>
                                        <select name="gender" id="gender" class="form-control">
                                            <option value="Male">Male</option>
                                            <option value="Female">Female</option>
                                        </select>
                                    </div>
                                </div> -->
                            </div>
                            <div class="mb-3 ms-5 row-cols-5 text-start">
                                <input type="submit" name="submit_button" class="btn btn-primary" value="Edit" />
                            </div>
                        </form>

                    </div>
                </div>

                <% } else { %>

                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col">Sample Data</div>
                                <div class="col">
                                    <a href="/admin/sample-data/add" class="btn btn-success btn-sm float-end">Add</a>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <tr>
                                        <th>#Sl NO</th>
                                        <th>Location</th>
                                        <th>Capacity</th>
                                        <!-- <th>Gender</th> -->
                                        <th>Action</th>
                                    </tr>
                                    <% if(sampleData.length> 0)
                                        {
                                        var i=0;
                                        sampleData.forEach(function(data){
                                        i++;
                                        %>
                                        <tr>
                                            <td>
                                                <%= i %>
                                            </td>
                                            <td>
                                                <%= data.location %>
                                            </td>
                                            <td>
                                                <%= data.capacity %>
                                            </td>

                                            <td>
                                                <a href="/admin/sample-data/edit/<%= data.id %>"
                                                    class="btn btn-primary btn-sm">Edit</a>
                                                <a href="/admin/sample-data/delete/<%= data.id %>"
                                                    class="btn btn-danger btn-sm">Delete</a>

                                            </td>
                                        </tr>
                                        <% }); } else { %>
                                            <tr>
                                                <td colspan="5">No Data Found</td>
                                            </tr>
                                            <% } %>
                                </table>
                            </div>
                        </div>
                    </div>

                    <% } %>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>

</html>